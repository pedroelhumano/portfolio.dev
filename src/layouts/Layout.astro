---
import { ViewTransitions } from "astro:transitions";
import "@fontsource-variable/jost";

import Logo from "@/modules/navbar/Logo/Logo.astro";
import Menu from "@/modules/navbar/Menu/Menu.astro";
import ThemeToggle from "@/components/ThemeToggle/ThemeToggle.astro";
import Seo from "@/components/Seo/Seo.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <meta name="generator" content={Astro.generator} /> averiguar que es esto -->
    <!-- TODO: verificar si SEO debe estar aquí enviarlo a otro componente que use el layouut -->
    <Seo title={title} />
    <ViewTransitions />
  </head>
  <body>
    <!--
     `    ``               `
      ``  _ `      `       ``
     `   |_| `  `` ``    `  `
    ``  -___-_` `   ` --------------
