    <div class="bg-secondary flex">
      <section class="flex flex-col border-r-2 min-h-screen justify-between">
        <div class="flex flex-col w-48 ml-8 mt-8 pr-2 mr-4">
          <div class="flex flex-col mb-10">
            <h1
              class="flex flex-col text-5xl text-primary italic transform -rotate-3"
            >
              <span>
                <span aria-hidden class="text-2xl">&lt;</span>
                Pedro
              </span>

              <span class="mt-[-0.3em]">
                Yanez
                <span aria-hidden class="text-2xl">/&gt;</span>
              </span>
            </h1>

            <!-- TODO: INternalizacion -->
            <h2
              class="mx-auto mt-[-0.6em] text-primary italic transform -rotate-3"
            >
              Developer
            </h2>
          </div>
          <!-- <Hero /> -->
          <Menu />
        </div>
        <!-- TODO: Internalizacion -->
        <h6 class="text-primary/80 text-xs mb-2 ml-2">
          <strong>Made with ❤️ by Pedro Yanez</strong>
        </h6>
      </section>

      <main class="flex flex-col max-w-5xl mt-20 mx-auto w-full">
        <slot />
      </main>

      <ThemeToggle />
    </div>
  </body>
</html>
<style is:global>
  :root {
    --color-primary: 5, 20, 35;
    --color-secondary: 255, 250, 247;
    --background-color: --color-primary;
  }

  .dark {
    --color-primary: 255, 250, 247;
    --color-secondary: 5, 20, 35;
  }

  html {
    font-family: "Jost Variable", system-ui, sans-serif;
    color: rgb(255, 36, 65);
  }
</style>
