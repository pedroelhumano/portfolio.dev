---
import "@fontsource-variable/jost";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portafolio de Pedro Yanez @pedroelhumano"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <meta name="generator" content={Astro.generator} /> averiguar que es esto -->
    <title>{title}</title>
  </head>
  <body>
    <div class="max-w-6xl mx-auto mt-64">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: "Jost Variable", system-ui, sans-serif;
    background: #13151a;
  }
</style>
