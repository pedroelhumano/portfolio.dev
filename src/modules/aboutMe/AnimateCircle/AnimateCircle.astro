import HagalRune from "@/assets/icons/HagalRune.astro";
import PedroYanez from "@assets/img/pedro-yanez.jpg";
---

<div class=`coin-container`>
  <div class="relative flex justify-center items-center w-52 h-52 coin">
    <div
      class=`absolute flex rounded-full grow-0 shrink-0 w-52 h-52 bg-primary/90 coin-face`
    >
      <HagalRune class="m-auto text-secondary w-44 h-44" />
    </div>

    <img
      id="pedro-yanez-photo"
      src={PedroYanez.src}
      alt="Pedro Yanez"
      class="rounded-full grow-0 shrink-0 flex justify-center coin-face back"
    />
  </div>
</div>

<style>
  @keyframes flip {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(180deg);
    }
  }

  .coin-container {
    perspective: 999px;
  }

  .coin {
    transform-style: preserve-3d;
    transform: rotateY(0deg);
    animation: flip 3s ease-in-out forwards;
    animation-delay: 4s;
  }

  .coin-face {
    backface-visibility: hidden;
  }

  .back {
    transform: rotateY(180deg);
  }
</style>
