---
// import HagalRuneCircle from "../HagalRuneCircle/HagalRuneCircle.astro";
import HagalRuneCircle from "@/modules/heroSection/HagalRuneCircle/HagalRuneCircle.astro";
---

<div class=`coin-container`>
  <div class="relative flex justify-center items-center w-52 h-52 coin">
    <HagalRuneCircle />

    <img
      id="pedro-yanez-photo"
      src="/pedro-yanez.jpg"
      alt="Pedro Yanez"
      class="rounded-full grow-0 shrink-0 flex justify-center coin-face back"
    />
  </div>
</div>

<style>
  @keyframes flip {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(180deg);
    }
  }

  .coin-container {
    perspective: 999px;
  }

  .coin {
    transform-style: preserve-3d;
    transform: rotateY(0deg);
    animation: flip 3s ease-in-out forwards;
    animation-delay: 4s;
  }

  .coin-face {
    backface-visibility: hidden;
  }

  .back {
    transform: rotateY(180deg);
  }
</style>
