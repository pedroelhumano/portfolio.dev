---
import HagalRune from "@/components/HagalRune/HagalRune.astro";
---

<div class="coin-container">
  <div class="relative w-52 h-52 coin">
    <div
      class="rounded-full grow-0 shrink-0 absolute flex justify-center items-center w-52 h-52 bg-slate-100 coin-face"
      role="img"
    >
      <HagalRune class="text-black w-44 h-44" />
    </div>

    <img
      id="pedro-yanez-photo"
      src="/pedro-yanez.jpg"
      alt="Pedro Yanez"
      class="rounded-full grow-0 shrink-0 flex justify-center coin-face back"
    />
  </div>
</div>

<style>
  @keyframes flip {
    0% {
      transform: rotateY(0deg);
    }
    100% {
      transform: rotateY(180deg); /* Gira 180 grados para el efecto cara/cruz */
    }
  }

  .coin-container {
    perspective: 1000px;
  }

  .coin {
    transform-style: preserve-3d;
    transform: rotateY(0deg);
    animation: flip 3s ease-in-out forwards;
    animation-delay: 4s;
  }

  .coin-face {
    backface-visibility: hidden;
  }

  .back {
    transform: rotateY(180deg);
  }
</style>
